{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": "./tsconfig.json"
  },
  "extends": [
    "@prefecthq"
  ],
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/*.spec.ts"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "globals": {
    "defineProps": "readonly",
    "defineEmits": "readonly"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      }
    }
  }
}